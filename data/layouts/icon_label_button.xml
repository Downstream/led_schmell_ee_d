<interface>

	<sprite_button name="the_button" 
		size="200, 45"
		center="0.5, 0.5"
		animate_on="grow; ease:outQuint; delay:0.1"
		>

		<sprite name="background" 
			attach_state="normal"
			size="200, 45"
			color="white"
			opacity="0.1"
			corner_radius="5"
			/>
			
		<sprite name="down_color" 
			attach_state="high"
			size="200, 45"
			color="red"
			corner_radius="5"
			/>
			

		<border name="the_border" 
			size="200, 45"
			color="white"
			border_width="1"
			opacity="0.5"
			corner_radius="5"
			/>		
	
				
		<image
			name="high_icon"
			center="0.5, 0.5"
			scale="0.5, 0.5"
			position="45, 20"
			color="white"
			/>
			
		<multiline_text 
			name="high_label"
			font="media_viewer:title"
			color="white"
			text_align="center"
			resize_limit="125"
			position="110, 8"
			center="0.5, 0.0" 
			/>			
		
	</sprite_button>
		
	
	
		
</interface>


